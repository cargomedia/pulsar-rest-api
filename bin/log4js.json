{
  "appenders": [
    {
      "type": "logLevelFilter",
      "level": "INFO",
      "appender": {
        "type": "console",
        "layout": {
          "type": "colored"
        }
      }
    },
    {
      "type": "logLevelFilter",
      "level": "DEBUG",
      "appender": {
        "type": "dateFile",
        "pattern": "-yyyy-MM-dd",
        "filename": "pulsar-rest-api.log",
        "layout": {
          "type": "pattern",
          "pattern": "%r %p - %m"
        }
      }
    }
  ]
}
